<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta charset="UTF-8">
		<title>Panel Administrateur - {% block title %}{% endblock %}</title>
		<link rel="icon" href="{{ asset('favicons/admin.png') }}">
		<link rel="stylesheet" href="{{ asset('css/global.css') }}">
		<link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
		<link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
		<link rel="stylesheet" href="{{ asset('css/admin.css') }}">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link
		rel="stylesheet" href=" https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900">


		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="wrapper d-flex align-items-stretch">
			<nav id="sidebar" class="active">
				<div class="custom-menu">
					<button type="button" id="sidebarCollapse" class="btn btn-primary">
						<i class="fa fa-bars"></i>
						<span class="sr-only">Menu</span>
					</button>
				</div>
				<div class="p-4">
					<h1>
						<a href="/admin" class="logo">FeedBack</a>
					</h1>
					<ul class="list-unstyled components mb-5">
						<li class="active">
							<a href="/admin">
								<span class="fas fa-home mr-3"></span>
								Accueil</a>
						</li>
						<li>
							<a href="/admin/graph">
								<span class="fas fa-chart-pie mr-3"></span>
								Graphique</a>
						</li>
						<li>
							<a href="/admin/commentaire">
								<i class="fa fa-comment mr-3" aria-hidden="true"></i>
								Commentaire</a>
						</li>
						<li>
							<a href="/admin/tauxDeVote">
								<i class="fa fa-signal mr-3" aria-hidden="true"></i>
								Taux de vote</a>
						</li>
						{% if is_granted('ROLE_SUPERADMIN') %}
							<hr>
							<h6 class="text-white text-center">Gérez accès</h6>
							<hr>
							<li>
								<a href="/admin/pin/edit">
									<i class="fa fa-wrench mr-3" aria-hidden="true"></i>
									Gestion PIN (QrCode)</a>
							</li>
							<li>
								<a href="/admin/user">
									<i class="fa fa-wrench mr-3" aria-hidden="true"></i>
									Gestion utilisateurs</a>
							</li>
							<hr>
							<h6 class="text-white text-center">Gérez formulaire</h6>
							<hr>
							<li>
								<a href="/admin/categories">
									<i class="fa fa-wrench mr-3" aria-hidden="true"></i>
									Gestion catégories</a>
							</li>
							<li>
								<a href="/admin/users">
									<i class="fa fa-wrench mr-3" aria-hidden="true"></i>
									Gestion classes</a>
							</li>
							<li>
								<a href="/admin/repas">
									<i class="fa fa-wrench mr-3" aria-hidden="true"></i>
									Gestion repas</a>
							</li>
						{% endif %}
					</ul>


					<div class="footer">
						<p>
							Copyright &copy;<script>
								document.write(new Date().getFullYear());
							</script>
							<br/>
							All rights reserved
						</p>
					</div>

					<a class="btn btn-danger" href="{{ path('app_logout') }}">{{'Déconnexion'|trans}}</a>

				</div>
			</nav>

			<div id="content" class="text-center p-4 p-md-5 pt-5"> {% block body %}{% endblock %}
				</div>
				<script src="{{asset('javascript/jquery.min.js') }}"></script>
				<script src="{{asset('javascript/popper.js') }}"></script>
				<script src="{{asset('javascript/bootstrap.min.js') }}"></script>
				<script src="{{asset('javascript/main.js') }}"></script>
				<script src="https://kit.fontawesome.com/e838603ccd.js" crossorigin="anonymous"></script>
			</div>
		</body>
	</html>
